<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/spacing_large"
        android:orientation="vertical"
        android:background="@color/grey_10">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_middle">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/heading_sale_detail"
                android:textSize="@dimen/spacing_large"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_20"/>

    <!-- min order 10 -->
    <LinearLayout
            android:id="@+id/grosirListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_20"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/heading_sale_min_order10"
                android:textSize="@dimen/spacing_large"
                android:padding="@dimen/spacing_middle"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:background="@color/grey_20"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/minOrder10ItemListRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/spacing_middle"
                android:scrollbars="vertical"
                android:scrollingCache="true" />

    </LinearLayout>
    <!-- min order 10 -->

    <!-- min order 5 -->
    <LinearLayout
            android:id="@+id/semiGrosirListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_20"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/heading_sale_min_order5"
                android:textSize="@dimen/spacing_large"
                android:padding="@dimen/spacing_middle"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:background="@color/grey_20"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/minOrder5ItemListRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/spacing_middle"
                android:scrollbars="vertical"
                android:scrollingCache="true" />

    </LinearLayout>
    <!-- min order 5 -->

    <!-- ecer -->
    <LinearLayout
            android:id="@+id/eceranListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_20"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/heading_sale_eceran"
                android:textSize="@dimen/spacing_large"
                android:padding="@dimen/spacing_middle"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:background="@color/grey_20"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/eceranItemListRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/spacing_middle"
                android:scrollbars="vertical"
                android:scrollingCache="true" />

    </LinearLayout>
    <!-- ecer -->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/heading_sale_total"
                android:textSize="@dimen/spacing_large"
                android:padding="@dimen/spacing_middle"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:background="@color/grey_20"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/saleItemListRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/spacing_middle"
                android:scrollbars="vertical"
                android:scrollingCache="true" />

    </LinearLayout>

</LinearLayout>